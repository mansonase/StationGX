<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <FrameLayout
        android:id="@+id/main_animation"
        android:layout_width="607px"
        android:layout_height="736px"
        android:background="@drawable/background_animation_block"
        android:layout_marginTop="32px"
        android:layout_marginStart="32px"/>
    
    
    <RelativeLayout
        android:layout_width="608px"
        android:layout_height="736px"
        android:layout_marginTop="32px"
        android:layout_toEndOf="@id/main_animation"
        android:background="@drawable/background_welcome_block">

        <ImageView
            android:layout_width="48px"
            android:layout_height="48px"
            android:id="@+id/welcome_avatar"
            android:background="@drawable/dummy_welcome_avatar"
            android:layout_marginTop="17px"
            android:layout_marginStart="25px"
            android:scaleType="fitCenter"/>


        <TextView
            android:id="@+id/welcome_username"
            android:layout_width="93px"
            android:layout_height="32px"
            android:layout_marginStart="88px"
            android:layout_marginTop="25px"
            android:text="Mary Lin"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/word_black"
            android:textSize="24px" />

        <ImageView
            android:layout_width="40px"
            android:layout_height="48px"
            android:id="@+id/welcome_ring"
            android:background="@drawable/dummy_welcome_bell"
            android:layout_marginTop="17px"
            android:layout_marginEnd="22px"
            android:layout_alignParentEnd="true"
            />
        
        <View
            android:layout_width="608px"
            android:layout_height="1px"
            android:background="@color/icon_grey"
            android:layout_marginTop="82px" />






    </RelativeLayout>
</RelativeLayout>