<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    android:orientation="horizontal">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/base_viewpager"
        android:background="@android:color/transparent"/>


    <com.rd.PageIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pageindicators"
        app:piv_animationType="slide"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/main_white"
        app:piv_unselectedColor="@color/icon_grey"
        app:piv_viewPager="@id/base_viewpager"
        app:piv_radius="4px"
        android:layout_marginTop="777px"
        android:layout_marginStart="628px"/>



</RelativeLayout>